<body>
    <script type="module" src="/main.js">
    </script>
    <h2>You are having: {{ dietName }}</h2>
    <div id="foodList"></div>
    <div class="form-horizontal col-md-2 offset-md-5" role="form">
        <label for="food">food: </label>
